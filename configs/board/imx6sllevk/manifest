# [general]
machine="imx6sllevk"

UBOOT_CONFIG="mx6sllevk_defconfig"

device_tree="linux/kernel/arm32/IMX/imx6sll-evk.dtb"

# offset 1k
DISK_BOOTLOADER_OFFSET="1024"

COMPOSITE_IMG1_FILE_sd="bsp/u-boot/imx6sllevk/u-boot-dtb.imx"


# [distro autoboot script]
distro_bootscript=bsp/u-boot/imx6sllevk/imx6sllevk_boot.scr
distroboot=\
'env exists fdt_file || setenv fdt_file imx6sll-evk.dtb;'\
'env exists image || setenv image zImage;'\
'env exists devpart_boot || setenv devpart_boot 1;'\
'env exists devpart_root || setenv devpart_root 4;'\
'part uuid $devtype $devnum:$devpart_root partuuidr;'\
'setenv bootargs console=ttymxc0,115200 earlycon=ec_imx6q,0x30860000,115200 root=PARTUUID=$partuuidr rw rootwait $othbootargs;'\
'load $devtype $devnum:$devpart_boot $kernel_addr_r $image;'\
'load $devtype $devnum:$devpart_boot $fdt_addr_r $fdt_file;'\
'bootz $kernel_addr_r - $fdt_addr_r'
