# [general]
machine="ls1046ardb"

# default RCW
rcw_qspi="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1800_qspiboot.bin"
rcw_qspi_sec="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1600_qspiboot_sben.bin"
rcw_sd="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1800_sdboot.bin"
rcw_sd_sec="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1800_sdboot_sben.bin"
rcw_emmc="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1800_emmcboot.bin"
rcw_emmc_sec="bsp/rcw/ls1046ardb/RR_FFSSPPPH_1133_5559/rcw_1800_emmcboot_sben.bin"

uefi_qspi="bsp/uefi/ls1046ardb/LS1046ARDB_EFI_QSPIBOOT.fd"
device_tree="linux/kernel/arm64/LS/fsl-ls1046a-rdb-sdk.dtb"

BOOT_TYPE="sd qspi emmc"
BOOTLOADER_TYPE="uboot uefi"

UBOOT_CONFIG="ls1046ardb_tfa_defconfig ls1046ardb_tfa_SECURE_BOOT_defconfig"

# RCW/PBL+BL2 image
COMPOSITE_IMG1_FILE_sd="bsp/atf/ls1046ardb/bl2_sd.pbl"
COMPOSITE_IMG1_FILE_sd_sec="bsp/atf/ls1046ardb/bl2_sd_sec.pbl"
COMPOSITE_IMG1_FILE_qspi="bsp/atf/ls1046ardb/bl2_qspi.pbl"
COMPOSITE_IMG1_FILE_qspi_sec="bsp/atf/ls1046ardb/bl2_qspi_sec.pbl"
COMPOSITE_IMG1_FILE_emmc="bsp/atf/ls1046ardb/bl2_emmc.pbl"

# BL33 fip image
COMPOSITE_IMG2_FILE="bsp/atf/ls1046ardb/fip_uboot.bin"
COMPOSITE_IMG2_FILE_sec="bsp/atf/ls1046ardb/fip_uboot_sec.bin"
COMPOSITE_IMG2_FILE_uefi="bsp/atf/ls1046ardb/fip_uefi.bin"

# bootloader UEFI environment variable
COMPOSITE_IMG3_FILE_uefi="bsp/uefi/ls1046ardb/LS1046ARDBNV_EFI_QSPIBOOT.fd"

# secure boot headers
COMPOSITE_IMG4_FILE_sd_sec="bsp/secboot_hdrs/ls1046ardb/secboot_hdrs_sdboot.bin"
COMPOSITE_IMG4_FILE_qspi_sec="bsp/secboot_hdrs/ls1046ardb/secboot_hdrs_qspiboot.bin"

# fuse provisioning image
COMPOSITE_IMG6_FILE="bsp/atf/ls1046ardb/fuse_fip.bin"
COMPOSITE_IMG6_FILE_sec="bsp/atf/ls1046ardb/fuse_fip_sec.bin"

# fman ucode image
COMPOSITE_IMG7_FILE="bsp/fm_ucode/fsl_fman_ucode_ls1046_r1.0_106_4_18.bin"

# QE ucode image
COMPOSITE_IMG8_FILE="bsp/qe_ucode/iram_Type_A_LS1021a_r1.0.bin"

# Ethernet PHY image
COMPOSITE_IMG9_FILE="bsp/phy_cortina/cs4315-cs4340-PHY-ucode.txt"

# script for flashing
COMPOSITE_IMG10_FILE="images/flash_images.scr"

# DTB
COMPOSITE_IMG14_FILE="${device_tree}"



# automatic distro boot script
distro_bootscript="bsp/u-boot/ls1046ardb/ls1046ardb_boot.scr"
bootscript_dec="bsp/u-boot/ls1046ardb/ls1046ardb_dec_boot.scr"
bootscript_enforce="bsp/u-boot/ls1046ardb/ls1046ardb_enforce_boot.scr"


distroboot=\
'env exists dtb || setenv dtb fsl-ls1046a-rdb-sdk.dtb;'\
'env exists kernel_image || setenv kernel_image Image;'\
'env exists devpart_boot || setenv devpart_boot 1;'\
'env exists devpart_root || setenv devpart_root 4;'\
'part uuid $devtype $devnum:$devpart_root partuuidr;'\
'setenv bootargs console=ttyS0,115200 earlycon=uart8250,mmio,0x21c0500 root=PARTUUID=$partuuidr rw rootwait $othbootargs;'\
'load $devtype $devnum:$devpart_boot $kernel_addr_r $kernel_image;'\
'load $devtype $devnum:$devpart_boot $fdt_addr_r $dtb;'\
'env exists secureboot && echo validating secureboot && run secureboot_validate;'\
'booti $kernel_addr_r - $fdt_addr_r'


distroboot_ima=\
'env exists dtb || setenv dtb fsl-ls1046a-rdb-sdk.dtb;'\
'env exists kernel_image || setenv kernel_image Image;'\
'env exists devpart_boot || setenv devpart_boot 1;'\
'env exists devpart_root || setenv devpart_root 4;'\
'part uuid $devtype $devnum:$devpart_root partuuidr;'\
'load $devtype $devnum:$devpart_boot $kernel_addr_r $kernel_image;'\
'load $devtype $devnum:$devpart_boot $fdt_addr_r $dtb;'\
'setenv initramfs_addr_r 0xb0000000; setenv initramfsheader_addr_r 0x80300000;'\
'load $devtype $devnum:$devpart_boot $initramfs_addr_r initramfs.img;'\
'env exists secureboot && echo validating secureboot && run secureboot_validate;'\
'setenv bootargs console=ttyS0,115200 earlycon=uart8250,mmio,0x21c0500 root=PARTUUID=$partuuidr rw rootwait $othbootargs;'\
'booti $kernel_addr_r $initramfs_addr_r $fdt_addr_r'



securevalidate="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls1046ardb/hdr_linux.out; load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls1046ardb/hdr_dtb.out; esbc_validate \$kernelheader_addr_r; esbc_validate \$fdtheader_addr_r'"


securevalidate_enc="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls1046ardb/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls1046ardb/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; size \$devtype \$devnum:\$devpart_boot \$kernel_image; echo Encapsulating linux image;setenv key_addr 0x87000000; mw \$key_addr $key_id_1;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_2;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_3;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_4;setenv key_addr 0x87000000; blob enc \$kernel_addr_r \$load_addr \$filesize \$key_addr; setexpr blobsize \$filesize + 0x30;echo Saving encrypted linux ;save \$devtype \$devnum:\$devpart_boot \$load_addr /\$kernel_image \$blobsize;size \$devtype \$devnum:\$devpart_boot \$dtb;echo Encapsulating dtb image; blob enc \$fdt_addr_r \$load_addr \$filesize \$key_addr; setexpr blobsize \$filesize + 0x30;echo Saving encrypted dtb; save \$devtype \$devnum:\$devpart_boot \$load_addr /\$dtb \$blobsize; size \$devtype \$devnum:\$devpart_boot /ls1046ardb_dec_boot.scr; load \$devtype \$devnum:\$devpart_boot \$load_addr /ls1046ardb_dec_boot.scr; echo replacing Bootscript; save \$devtype \$devnum:\$devpart_boot \$load_addr /ls1046ardb_boot.scr \$filesize;size \$devtype \$devnum:\$devpart_boot /secboot_hdrs/ls1046ardb/hdr_ls1046ardb_bs_dec.out; load \$devtype \$devnum:\$devpart_boot \$load_addr /secboot_hdrs/ls1046ardb/hdr_ls1046ardb_bs_dec.out ;echo Replacing bootscript header; save \$devtype \$devnum:\$devpart_boot \$load_addr /hdr_ls1046ardb_bs.out \$filesize;reset;'"


securevalidate_dec="setenv secureboot_validate 'size \$devtype \$devnum:\$devpart_boot \$kernel_image;setexpr imgsize \$filesize - 0x30 ;echo Decapsulating linux image; setenv key_addr 0x87000000; mw \$key_addr $key_id_1;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_2;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_3;setexpr \$key_addr \$key_addr + 0x4; mw \$key_addr $key_id_4; setenv key_addr 0x87000000; blob dec \$kernel_addr_r \$load_addr \$imgsize \$key_addr; cp.b \$load_addr \$kernel_addr_r \$filesize ;size \$devtype \$devnum:\$devpart_boot \$dtb;setexpr imgsize \$filesize - 0x30 ;echo Decapsulating dtb image; blob dec \$fdt_addr_r \$load_addr \$imgsize \$key_addr; cp.b \$load_addr \$fdt_addr_r \$filesize ; '"


securevalidate_fix="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls1046ardb/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls1046ardb/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; load \$devtype \$devnum:\$devpart_boot \$initramfsheader_addr_r /secboot_hdrs/ls1046ardb/hdr_initramfs.out; esbc_validate \$initramfsheader_addr_r; size \$devtype \$devnum:\$devpart_boot /ls1046ardb_enforce_boot.scr; load \$devtype \$devnum:\$devpart_boot \$load_addr /ls1046ardb_enforce_boot.scr; echo Replacing Bootscript; save \$devtype \$devnum:\$devpart_boot \$load_addr /ls1046ardb_boot.scr \$filesize;size \$devtype \$devnum:\$devpart_boot /secboot_hdrs/ls1046ardb/hdr_ls1046ardb_bs_enf.out; load \$devtype \$devnum:\$devpart_boot \$load_addr /secboot_hdrs/ls1046ardb/hdr_ls1046ardb_bs_enf.out ;echo Replacing bootscript header; save \$devtype \$devnum:\$devpart_boot \$load_addr /hdr_ls1046ardb_bs.out \$filesize; ' setenv othbootargs 'ima_tcb ima_appraise=fix ima_appraise_tcb evm=fix enforcing=0 '"


securevalidate_enforce="setenv secureboot_validate 'load \$devtype \$devnum:\$devpart_boot \$kernelheader_addr_r /secboot_hdrs/ls1046ardb/hdr_linux.out; esbc_validate \$kernelheader_addr_r;load \$devtype \$devnum:\$devpart_boot \$fdtheader_addr_r /secboot_hdrs/ls1046ardb/hdr_dtb.out; esbc_validate \$fdtheader_addr_r; load \$devtype \$devnum:\$devpart_boot \$initramfsheader_addr_r /secboot_hdrs/ls1046ardb/hdr_initramfs.out; esbc_validate \$initramfsheader_addr_r; ' setenv othbootargs 'ima_tcb ima_appraise=enforce ima_appraise_tcb enforcing=1 '"


# [uefi grub config, updated by installer]
uefi_grub_search="search --no-floppy --file /partuuid_boot --set root"
uefi_grub_linux="linux  /Image  console=ttyS0,115200 earlycon=uart8250,mmio,0x21c0500 root=PARTUUID=partuuid_root rw rootwait"


# [secure boot scripts in cst]
nand_script="scripts/platforms/ls104x_1012_nand.sh"
sd_script="scripts/platforms/ls104x_1012_sd.sh"
qspi_script="scripts/platforms/ls104x_1012_qspi.sh"
nor_script="scripts/platforms/ls104x_1012_nor.sh"
